{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "noLib": false,
    "moduleResolution": "node",
    "strict": true,
    "noEmit": true,
    "lib": [
      "ES5",
      "ES2015",
      "DOM",
      "ScriptHost"
    ]
  },
  "filesGlob": [
    "./**/*.ts",
    "!./node_modules/**/*.ts"
  ],
  "files": [
    "./main.ts",
    "./typings/es6-promise/es6-promise.d.ts"
  ],
  "compileOnSave": false,
  "include": [
    "**/*.ts"
  ]
}