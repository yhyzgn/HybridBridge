{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "declarationDir": "dist/types",
    "noImplicitAny": false,
    "noLib": false,
    "allowJs": true,
    "checkJs": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "noEmit": true,
    "lib": [
      "ES5",
      "ES6",
      "ES2015",
      "ES2020",
      "DOM",
      "ScriptHost"
    ]
  },
  "include": [
    "src/index.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "filesGlob": [
    "./**/*.ts",
    "!./node_modules/**/*.ts"
  ],
  "compileOnSave": true
}